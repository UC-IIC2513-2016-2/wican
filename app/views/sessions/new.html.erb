<h1>Inicia sesión con tu cuenta</h1>
<div id="login-form">
  <%= form_for :session, url: session_path do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit 'Inicia sesión' %>
    </div>
  <% end %>
</div>
