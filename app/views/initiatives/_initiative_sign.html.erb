<div id="initiative-sign">
  <h2>Firma de apoyo</h2>
  <p>
    <%= @initiative.signs.count %> personas ya han apoyado esta iniciativa. ¡Súmate!
  </p>
  <div>
    <%= form_for [@initiative, @sign] do |f| %>
      <% if @sign.errors.any? %>
        <div id="error_explanation">
          <h2>Errores</h2>
          <ul>
          <% @sign.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <%= f.label :user_id, 'Selecciona usuario' %>
        <%= f.collection_select :user_id, User.all, :id, :full_name, include_blank: true %>
      </div>
      <div>
        o ingresa tus datos
      </div>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.submit 'Firmar' %>
      </div>
    <% end %>
  </div>
</div>
